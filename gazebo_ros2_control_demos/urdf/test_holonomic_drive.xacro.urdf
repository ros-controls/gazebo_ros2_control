    <gazebo>
        <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
            <parameters>$(find gazebo_ros2_control_demos)/config/holonomic_drive_controller.yaml</parameters>
            <ros>
                <remapping>~/tf_odometry:=/tf</remapping>
            </ros>
        </plugin>
